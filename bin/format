#!/usr/bin/env bash
# Auto-format Ruby code using RuboCop
set -e

echo "ðŸŽ¨ Formatting Ruby code with RuboCop..."

if [ $# -eq 0 ]; then
    # Format all Ruby files
    bundle exec rubocop --autocorrect-all --format simple
else
    # Format specific files
    bundle exec rubocop --autocorrect-all --format simple "$@"
fi

echo "âœ… Code formatting complete!"